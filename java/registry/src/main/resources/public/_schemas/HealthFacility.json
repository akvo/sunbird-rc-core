{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "HealthFacility": {
      "$ref": "#/definitions/HealthFacility"
    }
  },
  "required": ["HealthFacility"],
  "title": "HealthFacility",
  "definitions": {
    "HealthFacility": {
      "$id": "#/properties/HealthFacility",
      "type": "object",
      "title": "Health Facility",
      "description": "Schema for health facilities",
      "required": [
        "hfName",
        "hfId",
        "typeOfHealthFacility",
        "address",
        "institution",
        "foundingDate"
      ],
      "properties": {
        "hfName": {
          "type": "string",
          "description": "Name of the Health Facility"
        },
        "hfId": {
          "type": "string",
          "description": "Unique identification number"
        },
        "typeOfHealthFacility": {
          "type": "string",
          "description": "Type of the Health Facility",
          "enum": ["Public", "Private", "Non Government"]
        },
        "address": {
          "type": "string",
          "description": "Address of the Health Facility"
        },
        "institution": {
          "type": "string",
          "description": "Name of the institution"
        },
        "foundingDate": {
          "type": "string",
          "format": "date",
          "description": "Date of graduation (YYYY-MM-DD)"
        },
        "numberOfActiveOfficer": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Number of Active Officer"
        },
        "certificateNumber": {
          "type": "string",
          "description": "Unique certificate number"
        }
      }
    }
  },
  "_osConfig": {
    "privateFields": [],
    "signedFields": [],
    "indexFields": ["hfId", "certificateNumber"],
    "uniqueIndexFields": ["certificateNumber"],
    "systemFields": [
      "osCreatedAt",
      "osUpdatedAt",
      "osCreatedBy",
      "osUpdatedBy"
    ],
    "roles": ["admin"],
    "inviteRoles": ["anonymous"],
    "ownershipAttributes": []
  }
}
